{
  "compilerOptions": {
    "outDir": "../bin",
    "module": "commonjs",
    "target": "es2018",
    "lib": ["es2018"],
    "sourceMap": false,
    "allowJs": false,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "types": ["node"],
    "typeRoots": ["@types"],
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "bin", "test"]
}
